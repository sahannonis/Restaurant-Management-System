<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#0FFF1F"
                android:centerColor="#0FFF1F"
                android:endColor="#0FFF1F"
                 />
            <stroke
                android:width="1dp"
                android:color="#0FFF1F" />
            <corners
                android:radius="100dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#F3FF4A"
                />
            <size
                android:width="160dp"
                android:height="41dp"
                />
            <stroke
                android:width="1dp"
                android:color="#000000"
                />
            <corners
                android:radius="100dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>

</selector>