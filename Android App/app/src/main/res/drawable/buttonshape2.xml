<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#6B6B6B"
                android:centerColor="#6B6B6B"
                android:endColor="#6B6B6B"
                />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="100dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#000000"
                />
            <size
                android:width="130dp"
                android:height="30dp"
                />

            <corners
                android:radius="14dp"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</selector>